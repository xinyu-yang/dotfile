# Set master key to Ctrl-s
escape ^S^S

# Disable visual bell
vbell off

# Disable bell sound
defbce on

# Set the status line
hardstatus alwaysfirstline
#hardstatus string "%{= kG}%-w%{= kR}%n %t%{-}%+w %-=%{= kG} %H | %l | %Y-%m-%d %c "
hardstatus string "%{= KW} %H [%`] %{= Kw}|%{-} %-Lw%{= bR}%n%f %t%{-}%+Lw %=%C%a %Y-%M-%d"

# Enable 256 color
term screen-256color

# Allow bold colors - necessary for some color schemes
attrcolor b ".I"

mousetrack on
